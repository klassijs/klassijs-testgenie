{
  "name": "gen-ai-qa-tool",
  "version": "1.0.0",
  "description": "AI-powered test automation platform for generating Cucumber test cases",
  "creator": {
    "name": "Larry Goddard",
    "linkedin": "https://linkedin.com/in/larryg",
    "youtube": "https://youtube.com/@LarryG_01"
  },
  "contributors": [
    {
      "name": "Carlos Bermejo",
      "github": "https://github.com/carlosbermejop"
    },
    {
      "name": "Arthur East",
      "github": "https://github.com/arthureast"
    }
  ],
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "pnpm --filter @gen-ai-qa-tool/backend run dev",
    "client": "pnpm --filter @gen-ai-qa-tool/frontend run start",
    "build": "pnpm --filter @gen-ai-qa-tool/frontend run build",
    "install-all": "pnpm install",
    "start": "pnpm --filter @gen-ai-qa-tool/backend run start",
    "build:all": "pnpm --filter @gen-ai-qa-tool/frontend run build",
    "test": "pnpm --filter @gen-ai-qa-tool/frontend run test"
  },
  "keywords": ["test-automation", "cucumber", "gherkin", "ai", "openai", "monorepo"],
  "author": "Test Automation Architect",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 