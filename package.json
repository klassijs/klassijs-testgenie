{
  "name": "klassi-ai",
  "version": "1.0.0",
  "description": "AI-powered test automation platform for generating Cucumber test cases",
  "main": "index.js",
  "bin": {
    "klassi-ai": "./bin/klassi-ai"
  },
  "files": [
    "bin/",
    "backend/",
    "frontend/",
    "package.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml",
    "README.md",
    "LICENSE"
  ],
  "creator": {
    "name": "Larry Goddard",
    "github": "https://github.com/klassijs",
    "linkedin": "https://linkedin.com/in/larryg",
    "youtube": "https://youtube.com/@LarryG_01"
  },
  "contributors": [
    {
      "name": "Carlos Bermejo",
      "github": "https://github.com/carlosbermejop"
    },
    {
      "name": "Arthur East",
      "github": "https://github.com/arthureast"
    }
  ],
  "keywords": [
    "test-automation",
    "test-case-generation",
    "test-case-generation-ai",
    "test-case-generation-ai-cucumber",
    "test-case-generation-ai-gherkin",
    "test-case-generation-ai-openai",
    "test-case-generation-ai-monorepo",
    "cucumber",
    "gherkin",
    "ai",
    "openai",
    "monorepo"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "pnpm --filter @klassijs-ai/backend run dev",
    "client": "pnpm --filter @klassijs-ai/frontend run start",
    "build": "pnpm --filter @klassijs-ai/frontend run build",
    "install-all": "pnpm install",
    "start": "pnpm --filter @klassijs-ai/backend run start",
    "build:all": "pnpm --filter @klassijs-ai/frontend run build",
    "test": "pnpm --filter @klassijs-ai/frontend run test",
    "prepublishOnly": "pnpm install-all && pnpm build:all",
    "postinstall1": "node postinstall.js",
    "postinstall": "node -e \"const {spawn} = require('child_process'); const fs = require('fs'); if (fs.existsSync('pnpm-workspace.yaml')) { console.log('Installing workspace dependencies...'); const pnpm = spawn('pnpm', ['install'], {stdio: 'inherit', shell: false}); pnpm.on('close', (code) => { if (code === 0) console.log('✅ Dependencies installed!'); else console.log('⚠️ Installation failed, continuing...'); }); } else { console.log('No workspace found'); }\""
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/klassijs/klassi-ai.git"
  },
  "homepage": "https://github.com/klassijs/klassi-ai#readme",
  "bugs": {
    "url": "https://github.com/klassijs/klassi-ai/issues"
  }
}
