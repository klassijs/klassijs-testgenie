{
  "name": "klassijs-testgenie",
  "version": "1.0.0",
  "description": "AI powered test automation platform for generating Cucumber test cases",
  "main": "index.js",
  "bin": {
    "klassijs-testgenie": "./bin/klassijs-testgenie"
  },
  "creator": {
    "name": "Larry Goddard",
    "github": "https://github.com/klassijs",
    "linkedin": "https://linkedin.com/in/larryg",
    "youtube": "https://youtube.com/@LarryG_01"
  },
  "contributors": [
    {
      "name": "Carlos Bermejo",
      "github": "https://github.com/carlosbermejop"
    },
    {
      "name": "Arthur East",
      "github": "https://github.com/arthureast"
    }
  ],
  "keywords": [
    "test automation",
    "test case generation",
    "ai test case generation",
    "ai test case generation cucumber",
    "ai test case generation gherkin",
    "cucumber",
    "gherkin",
    "ai",
    "testgenie",
    "openai",
  ],
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "server": "pnpm --filter @klassijs-testgenie/backend run dev",
    "client": "pnpm --filter @klassijs-testgenie/frontend run start",
    "build": "pnpm --filter @klassijs-testgenie/frontend run build",
    "install-all": "pnpm install",
    "start": "pnpm --filter @klassijs-testgenie/backend run start",
    "build:all": "pnpm --filter @klassijs-testgenie/frontend run build",
    "test": "pnpm --filter @klassijs-testgenie/frontend run test",
    "prepublishOnly": "pnpm install-all && pnpm build:all",
    "postinstall": "node postinstall.js"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/klassijs/klassijs-testgenie.git"
  },
  "homepage": "https://github.com/klassijs/klassijs-testgenie#readme",
  "bugs": {
    "url": "https://github.com/klassijs/klassijs-testgenie/issues"
  }
