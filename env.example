# Azure OpenAI Configuration
OPENAI_URL=https://your-resource.openai.azure.com/
OPENAI_DEVELOPMENT_ID=your_deployment_name
OPENAI_API_VERSION=2024-02-15-preview
OPENAI_API_KEY=your_azure_openai_api_key_here
OPENAI_REGION=your_region_here
OPENAI_MODEL_NAME=your_model_name_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Zephyr Scale Configuration (Optional)
ZEPHYR_BASE_URL=https://your-instance.atlassian.net
ZEPHYR_API_TOKEN=your_zephyr_api_token_here
ZEPHYR_PROJECT_KEY=YOUR_PROJECT_KEY

# Jira Credentials
JIRA_BASE_URL=your-instance.atlassian.net
JIRA_EMAIL=your-jira-email-here
JIRA_API_TOKEN=your-jira-api-token-here

# React App (Frontend) Configuration
# REACT_APP_API_URL is used to set the base URL for API requests in the React application.
# This should point to the backend server that serves the API endpoints.
# Ensure that the backend server is running and accessible at this URL.
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000
